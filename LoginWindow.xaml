<Window x:Class="StudyManagementWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyManagementWpfApp"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Đăng Nhập" Height="300" Width="450">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Label FontSize="36" Content="Quản Lý Giảng Đường" HorizontalAlignment="Center" Margin="20,20,20,0" VerticalAlignment="Top" Height="80"/>

        <Button x:Name="btnDangKy" FontSize="20" Content="Đăng Ký" Margin="0,0,45,20" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="110" Click="btnDangKy_Click"/>
        <Button x:Name="btnDangNhap" FontSize="20" Content="Đăng Nhập" HorizontalAlignment="Left" Margin="45,0,0,20" Height="50" VerticalAlignment="Bottom" Click="btnDangNhap_Click"/>

        <Label Content="Tên Tài Khoản" HorizontalAlignment="Left" Margin="90,87,0,0" VerticalAlignment="Top" Width="100" Height="25"/>
        <TextBox x:Name="txtBoxAccName" HorizontalAlignment="Left" Margin="225,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>

        <Label Content="Mật Khẩu" HorizontalAlignment="Left" Margin="90,117,0,0" VerticalAlignment="Top" Width="100" Height="25"/>
        <PasswordBox x:Name="txtBoxPassword" HorizontalAlignment="Left" Margin="225,117,0,0" VerticalAlignment="Top" Width="120" Height="25"/>


    </Grid>
</Window>
