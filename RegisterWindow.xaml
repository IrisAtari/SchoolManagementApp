<Window x:Class="SchoolManagementApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolManagementApp"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Đăng Ký" Height="550" Width="300">
    <Grid>
        <Button Content="Đăng Ký" Margin="0,0,20,20" HorizontalAlignment="Right" Width="100" Height="30" VerticalAlignment="Bottom"/>

        <Label Content="Tên tài khoản*" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>

        <Label Content="Email" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        
        <Label Content="Số điện thoại" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        
        <Label Content="Mật khẩu" HorizontalAlignment="Left" Margin="10,215,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Margin="10,244,0,0" VerticalAlignment="Top" Width="280"/>
        
        <Label Content="Nhập lại Mật khẩu" HorizontalAlignment="Left" Margin="10,274,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Center" Margin="0,303,0,0" VerticalAlignment="Top" Width="280"/>

    </Grid>
</Window>
